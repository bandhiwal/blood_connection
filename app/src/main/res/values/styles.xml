<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_lite</item>
    </style>

    <style name="edittext_style_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_lite</item>
    </style>


    <style name="button_green_rectangle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_rounded_edges</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="button_green_20dp_corner_radius">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_rounded_edges_accpect</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>

</resources>
