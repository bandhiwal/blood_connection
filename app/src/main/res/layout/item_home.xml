<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginRight="@dimen/_7sdp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    app:cardElevation="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        app:cardElevation="@dimen/_20sdp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/transparent_gradient"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:minHeight="@dimen/_150sdp"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/thumnailImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"

                    />

                <LinearLayout
                    android:id="@+id/view_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="#000000"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/view"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/graph_icon" />

                    <TextView
                        android:id="@+id/post_num_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        tools:text="7" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/star_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"

                        android:src="@drawable/start_icon" />

                    <TextView
                        android:id="@+id/post_num_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        tools:text="7" />
                </LinearLayout>
                <!-- <ImageView
                     android:id="@+id/play_icon"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="10dp"
                     android:background="#e73636"
                     android:layout_centerInParent="true"
                     android:visibility="visible" />-->


                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="16dp"
                    android:background="@android:color/black"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/videolisttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:text="2000 views"
                android:textColor="@android:color/black"
                android:visibility="gone" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>